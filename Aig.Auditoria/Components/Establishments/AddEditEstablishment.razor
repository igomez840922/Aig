@using DataModel.Helper;


<!-- Modal Creat/Edit -->
@if (Establecimiento != null && OpenDialog)
{
    <div class="modal fade show" id="exampleModal" tabindex="-1" style="display: block;overflow-y: auto;" aria-modal="true" data-backdrop="static" role="dialog" aria-labelledby="staticBackdrop">
        <div class="modal-dialog  modal-xl" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="formModal">@(Establecimiento != null && Establecimiento.Id > 0 ? @languageContainerService.Keys["EditEstablishments"] : @languageContainerService.Keys["NewEstablishments"])</h5>
                    <button type="button" class="close" @onclick="(e)=>{Cancel();}"
                        aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <EditForm Model="@Establecimiento" OnValidSubmit="SaveData">
                        <DataAnnotationsValidator />

                        <div class="row clearfix">
                            <div class="col-sm-4">
                                <label>@languageContainerService.Keys["Type"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputSelect @bind-Value="Establecimiento.TipoEstablecimiento" class="form-control">
                                            @foreach (enumAUD_TipoEstablecimiento dt in Enum.GetValues(typeof(enumAUD_TipoEstablecimiento)))
                                            {
                                                if (dt != enumAUD_TipoEstablecimiento.None)
                                                {
                                                    <option value="@dt">@DataModel.Helper.Helper.GetDescription(dt)</option>
                                                }
                                            }
                                        </InputSelect>
                                        <ValidationMessage For=@(() => Establecimiento.TipoEstablecimiento) />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-8">
                                <label>@languageContainerService.Keys["Name"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputText class="form-control" @bind-Value="Establecimiento.Nombre" />
                                        <ValidationMessage For=@(() => Establecimiento.Nombre) />
                                    </div>
                                </div>
                            </div> 
                            <div class="col-sm-4">
                                <label for="password">@languageContainerService.Keys["LicNumber"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputText class="form-control" @bind-Value="Establecimiento.NumLicencia" />
                                        <ValidationMessage For=@(() => Establecimiento.NumLicencia) />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <label>@languageContainerService.Keys["Licencia Expedida"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <RadzenDatePicker TValue="DateTime?" @bind-Value="Establecimiento.FechaExpedida" ShowTime="false" DateFormat="dd/MM/yyyy" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <label>@languageContainerService.Keys["Licencia Expira"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <RadzenDatePicker TValue="DateTime?" @bind-Value="Establecimiento.FechaExpiracion" ShowTime="false" DateFormat="dd/MM/yyyy" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <label for="password">@languageContainerService.Keys["Aviso de Operaciones"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputText class="form-control" @bind-Value="Establecimiento.AvisoOperaciones" />
                                        <ValidationMessage For=@(() => Establecimiento.AvisoOperaciones) />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <label>@languageContainerService.Keys["Sector"]</label>
                                <div class="form-group">
                                                <div class="form-line">
                                        <InputSelect @bind-Value="Establecimiento.Sector" class="form-control">
                                            @foreach (enumAUD_TipoSector dt in Enum.GetValues(typeof(enumAUD_TipoSector)))
                                            {
                                                if (dt!= enumAUD_TipoSector.None)
                                                {
                                                    <option value="@dt">@DataModel.Helper.Helper.GetDescription(dt)</option>
                                                }                                                                                              
                                            }          
                                                    </InputSelect>
                                        <ValidationMessage For=@(() => Establecimiento.Sector) />
                                                </div>
                                            </div>                                
                            </div>
                            <div class="col-sm-4">
                                <label for="password">@languageContainerService.Keys["Institute"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputText class="form-control" @bind-Value="Establecimiento.Institucion" />
                                        <ValidationMessage For=@(() => Establecimiento.Institucion) />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <label for="password">@languageContainerService.Keys["Período"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputNumber class="form-control" @bind-Value="Establecimiento.Periodo" />
                                        <ValidationMessage For=@(() => Establecimiento.Periodo) />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <label>@languageContainerService.Keys["Status"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputSelect @bind-Value="Establecimiento.Status" class="form-control">
                                            @foreach (enumAUD_StatusEstablecimiento dt in Enum.GetValues(typeof(enumAUD_StatusEstablecimiento)))
                                            {
                                                <option value="@dt">@DataModel.Helper.Helper.GetDescription(dt)</option>
                                            }
                                        </InputSelect>
                                        <ValidationMessage For=@(() => Establecimiento.Status) />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row clearfix">
                            <div class="col-sm-4">
                                <label>@languageContainerService.Keys["Province"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputSelect class="form-control"
                                                 ValueExpression="@(() => IdProvincia)"
                                                 Value="@IdProvincia"
                                                 ValueChanged="@((long value) => OnProvinceChange(value))">
                                            @if (LProvincias != null)
                                            {
                                                foreach (var dt in LProvincias)
                                                {
                                                    <option value="@dt.Id">@dt.Nombre</option>
                                                }
                                            }
                                        </InputSelect>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <label>@languageContainerService.Keys["District"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputSelect class="form-control"
                                                 ValueExpression="@(() => IdDistrito)"
                                                 Value="@IdDistrito"
                                                 ValueChanged="@((long value) => OnDistrictChange(value))">
                                            @if (LDistritos != null)
                                            {
                                                foreach (var dt in LDistritos)
                                                {
                                                    <option value="@dt.Id">@dt.Nombre</option>
                                                }
                                            }
                                        </InputSelect>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <label>@languageContainerService.Keys["Corregimiento"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputSelect class="form-control"
                                                 ValueExpression="@(() => IdCorregimiento)"
                                                 Value="@IdCorregimiento"
                                                 ValueChanged="@((long value) => OnCorregimientoChange(value))">
                                            @if (LCorregimiento != null)
                                            {
                                                foreach (var dt in LCorregimiento)
                                                {
                                                    <option value="@dt.Id">@dt.Nombre</option>
                                                }
                                            }
                                        </InputSelect>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row clearfix">
                            <div class="col-sm-12">
                                <label for="password">@languageContainerService.Keys["Ubication"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputText class="form-control" @bind-Value="Establecimiento.Ubicacion" />
                                        <ValidationMessage For=@(() => Establecimiento.Ubicacion) />
                                    </div>
                                </div>
                            </div>                           
                        </div>
                        <div class="row clearfix">
                            <div class="col-sm-12">
                                <label for="password">@languageContainerService.Keys["Horario"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputText class="form-control" @bind-Value="Establecimiento.HorariosEstablecimiento" />
                                        <ValidationMessage For=@(() => Establecimiento.HorariosEstablecimiento) />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row clearfix">
                            <div class="col-sm-4">
                                <label for="password">@languageContainerService.Keys["PhoneNumber"] 1</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputText class="form-control" @bind-Value="Establecimiento.Telefono1" />
                                        <ValidationMessage For=@(() => Establecimiento.Telefono1) />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <label for="password">@languageContainerService.Keys["PhoneNumber"] 2</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputText class="form-control" @bind-Value="Establecimiento.Telefono2" />
                                        <ValidationMessage For=@(() => Establecimiento.Telefono2) />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <label for="password">@languageContainerService.Keys["Email"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputText class="form-control" @bind-Value="Establecimiento.Email" />
                                        <ValidationMessage For=@(() => Establecimiento.Email) />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row clearfix">
                            <div class="col-sm-8">
                                <label for="password">@languageContainerService.Keys["Representante Legal"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputText class="form-control" @bind-Value="Establecimiento.RepLegalNombre" />
                                        <ValidationMessage For=@(() => Establecimiento.RepLegalNombre) />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <label for="password">@languageContainerService.Keys["Identificación"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputText class="form-control" @bind-Value="Establecimiento.RepLegalCedula" />
                                        <ValidationMessage For=@(() => Establecimiento.RepLegalCedula) />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-8">
                                <label for="password">@languageContainerService.Keys["Nombre de Sociedad"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputText class="form-control" @bind-Value="Establecimiento.NombreSociedad" />
                                        <ValidationMessage For=@(() => Establecimiento.NombreSociedad) />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <br>
                        <div class="modal-footer">
                            <button type="submit"
                                class="btn btn-info waves-effect">
                                @languageContainerService.Keys["Save"]
                            </button>
                            <button type="button" class="btn btn-danger waves-effect"
                                @onclick="(e)=>{Cancel();}">
                                @languageContainerService.Keys["Cancel"]
                            </button>
                        </div>


                    </EditForm>

                </div>


            </div>
        </div>
    </div>

    <div class="modal-backdrop fade show"></div>
}

