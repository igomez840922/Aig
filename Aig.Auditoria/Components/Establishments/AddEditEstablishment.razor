                                                        <tr>
                                                            <td scope="row">@dt.NombreCompleto</td>
                                                            <td>@dt.Cedula</td>
                                                            <td>@dt.NumReg</td>
                                                            <td>@dt.Folio</td>
                                                            <td>@dt.Provincia</td>
                                                            <td>@dt.Distrito</td
                                                            <td>@dt.Corregimiento</td>
                                                            <td>@dt.Direccion</td>
                                                            <td>@dt.Telefono</td>
                                                            <td>@dt.Horario</td>
                                                            <td style="text-align:right">
