                                    </div>
                                </div>
                                <!--begin::Section-->
                                <div class="kt-section">
                                    <div class="table-responsive">
                                        <table class="table rounded table-striped">
                                            <thead class=thead-light>
                                                <tr>
                                                    <th>@languageContainerService.Keys["Nombre"]</th>
                                                    <th>@languageContainerService.Keys["Cédula"]</th>
                                                    <th>@languageContainerService.Keys["No.Reg"]</th>
                                                    <th>@languageContainerService.Keys["Folio"]</th>
                                                    <th>@languageContainerService.Keys["Provincia"]</th>
                                                    <th>@languageContainerService.Keys["Distrito"]</th>
                                                    <th>@languageContainerService.Keys["Corregimiento"]</th>
                                                    <th>@languageContainerService.Keys["Dirección"]</th>
                                                    <th>@languageContainerService.Keys["Telefono"]</th>
                                                    <th>@languageContainerService.Keys["Horario"]</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Establecimiento?.FarmaceuticoTablas?.LFarmaceuticos?.Count > 0)
                                                {
                                                    @foreach (var dt in Establecimiento.FarmaceuticoTablas.LFarmaceuticos)
