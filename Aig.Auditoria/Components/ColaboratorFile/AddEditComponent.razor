@using DataModel.Helper;


<!-- Modal Creat/Edit -->
@if (ExpedienteColaborador != null && OpenDialog)
{
    <div class="modal fade show" id="exampleModal" tabindex="-1" style="display: block;overflow-y: auto;" aria-modal="true" data-backdrop="static" role="dialog" aria-labelledby="staticBackdrop">
        <div class="modal-dialog  modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="formModal">@(ExpedienteColaborador != null && ExpedienteColaborador.Id > 0 ? @languageContainerService.Keys["Edit"] : @languageContainerService.Keys["New"]) @languageContainerService.Keys["Colaborador"]</h5>
                    <button type="button" class="close" @onclick="(e)=>{Cancel();}"
                            aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <EditForm Model="@ExpedienteColaborador" OnValidSubmit="SaveData">
                        <DataAnnotationsValidator />

                        <div class="row clearfix">
                            <div class="col-sm-9">
                                <label>@languageContainerService.Keys["FullName"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputText class="form-control" @bind-Value="ExpedienteColaborador.Nombre" />
                                        <ValidationMessage For=@(() => ExpedienteColaborador.Nombre) />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <label for="password">@languageContainerService.Keys["IdentificationCard"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputText class="form-control" @bind-Value="ExpedienteColaborador.Cedula" />
                                        <ValidationMessage For=@(() => ExpedienteColaborador.Cedula) />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <label for="password">@languageContainerService.Keys["Tiene Expediente"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputSelect @bind-Value="ExpedienteColaborador.TieneExpediente" class="form-control">
                                            <option value="false">No</option>
                                            <option value="true">Si</option>
                                        </InputSelect>
                                        <ValidationMessage For=@(() => ExpedienteColaborador.TieneExpediente) />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <label for="password">@languageContainerService.Keys["Observaciones"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputTextArea rows="6" class="form-control" @bind-Value="ExpedienteColaborador.ExpedienteDesc" />
                                        <ValidationMessage For=@(() => ExpedienteColaborador.ExpedienteDesc) />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <br><br>
                        <div class="modal-footer">
                            <button type="submit"
                                    class="btn btn-info waves-effect">
                                @languageContainerService.Keys["Save"]
                            </button>
                            <button type="button" class="btn btn-danger waves-effect"
                            @onclick="(e)=>{Cancel();}">
                                @languageContainerService.Keys["Cancel"]
                            </button>
                        </div>


                    </EditForm>

                </div>


            </div>
        </div>
    </div>


}

