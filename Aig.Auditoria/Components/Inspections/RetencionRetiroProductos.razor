                    </svg> @languageContainerService.Keys["Products"]
                    </div>
                    </div>
                    <div id="collapseTwo1" class="collapse" aria-labelledby="headingTwo1" data-parent="#accordionEx1">
                    <div class="card-body">

                    </div>
                    </div>
                    </div>
                    </div>
                    <!--end::Accordion-->*@



                                    <br>
                                    <div class="modal-footer">
                                        <button type="button" @onclick="(e)=>{OpenProduct();}"
                                class="btn btn-primary waves-effect">
                                            @languageContainerService.Keys["AddProduct"]
                                        </button>
                                        <button type="submit"
                                class="btn btn-info waves-effect">
                                            @languageContainerService.Keys["Save"]
                                        </button>
                                        <button type="button" class="btn btn-danger waves-effect"
                                @onclick="(e)=>{Cancel();}">
                                            @languageContainerService.Keys["Cancel"]
                                        </button>
                                    </div>


                                </EditForm>

                            </div>


                        </div>
                    </div>
                </div>


    <Aig.Auditoria.Components.RetiredProduct.AddEditProductComponent></Aig.Auditoria.Components.RetiredProduct.AddEditProductComponent>

    <div class="modal-backdrop fade show"></div>
