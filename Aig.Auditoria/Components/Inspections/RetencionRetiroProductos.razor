@using DataModel.Helper;

<!-- Modal Creat/Edit -->
@if (Inspeccion != null && OpenDialog)
{
    <div class="modal fade show" id="exampleModal" tabindex="-1" style="display: block;overflow-y: auto;" aria-modal="true" data-backdrop="static" role="dialog" aria-labelledby="staticBackdrop">
                    <div class="modal-dialog modal-xl" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="formModal">@(Inspeccion != null && Inspeccion.Id > 0 ? @languageContainerService.Keys["EditInspection"] : @languageContainerService.Keys["NewInspection"])</h5>
                                <button type="button" class="close" @onclick="(e)=>{Cancel();}"
                        aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>

                            <div class="modal-body">
                                <EditForm Model="@Inspeccion" OnValidSubmit="SaveData">
                                    <DataAnnotationsValidator />
                                    <h3>@languageContainerService.Keys["GeneralInfo"]</h3>
                                    <div class="row clearfix">
                                        <div class="col-sm-4">
                                            <label>@languageContainerService.Keys["StartDate"]</label>
                                            <div class="form-group">
                                                <div class="form-line">
                                                    <InputDate class="form-control" @bind-Value="Inspeccion.FechaInicio" />
                                                    <ValidationMessage For=@(() => Inspeccion.FechaInicio) />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-8">
                                            <label for="password">@languageContainerService.Keys["Establishments"]</label>
                                            <div class="form-group">
                                                <div class="form-line">
                                                    <InputSelect @bind-Value="Inspeccion.EstablecimientoId" class="form-control">
                                                        <option value="null">@languageContainerService.Keys["None"]</option>
                                                        @if (lEstablecimientos != null)
                                                        {
                                                            foreach (var dt in lEstablecimientos)
                                                            {
                                                                <option value="@dt.Id">@dt.Nombre</option>
                                                            }
                                                        }
                                                    </InputSelect>
                                                    <ValidationMessage For=@(() => Inspeccion.Establecimiento) />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row clearfix">
                                        <div class="col-sm-4">
                                            <label>@languageContainerService.Keys["Section"]</label>
                                            <div class="form-group">
                                                <div class="form-line">
                                                    <InputText class="form-control" @bind-Value="Inspeccion.InspRetiroRetencion.SeccionOficinaRegional" />
                                                    <ValidationMessage For=@(() => Inspeccion.InspRetiroRetencion.SeccionOficinaRegional) />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-8">
                                            <label>@languageContainerService.Keys["OperLicenseNumber"]</label>
                                            <div class="form-group">
                                                <div class="form-line">
                                                    <InputText class="form-control" @bind-Value="Inspeccion.InspRetiroRetencion.LicenseNumber" />
                                                    <ValidationMessage For=@(() => Inspeccion.InspRetiroRetencion.LicenseNumber) />
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <h3>@languageContainerService.Keys["Products"]</h3>

                                    <!--begin::Section-->
                                    <div class="kt-section">
                                        <div class="table-responsive">
                                            <table class="table rounded table-striped">
                                                <thead class=thead-light>
                                                    <tr>
                                                        <th>@languageContainerService.Keys["Name"]</th>
                                                        <th>@languageContainerService.Keys["CommercialPresentation"]</th>
                                                        <th>@languageContainerService.Keys["Fabricante"]</th>
                                                        <th>@languageContainerService.Keys["Pais"]</th>
                                                        <th>@languageContainerService.Keys["Lot"]</th>
                                                        <th>@languageContainerService.Keys["ExpDate"]</th>
                                                        <th>@languageContainerService.Keys["AmountWithheld"]</th>
                                                        <th>@languageContainerService.Keys["AmountWithdrawal"]</th>
                                                        <th>@languageContainerService.Keys["ProductDestiny"]</th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @if (Inspeccion != null && Inspeccion.InspRetiroRetencion.LProductos != null)
                                                    {
                                                        @foreach (var dt in Inspeccion.InspRetiroRetencion.LProductos)
                                                        {
                                                            <tr>
                                                                <td scope="row">@dt.Nombre</td>
                                                                <td>@dt.PresentacionComercial</td>
                                                                <td>@dt.Fabricante</td>
                                                                <td>@dt.Pais</td>
                                                                <td>@dt.Lote</td>
                                                                <td>@(dt.FechaExp?.ToString("dd/MM/yyyy") ?? "")</td>
                                                                <td>@dt.CantidadRetenida</td>
                                                                <td>@dt.CantidadRetenida</td>
                                                                <td>@dt.Destino</td>
                                                                <td style="text-align:right">
                                                                    <button type="button" class="btn btn-danger" @onclick="(e)=>{RemoveProduct(dt);}">@languageContainerService.Keys["Delete"]</button>
                                                                    <!-- /btn-group -->
                                                                </td>
                                                            </tr>
                                                        }
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                    <!--end::Section-->
