                                                    <div class="col-sm-8">
                                                        <label>@languageContainerService.Keys["FullName"]</label>
                                                        <div class="form-group">
                                                            <div class="form-line">
                                                                <InputText class="form-control" @bind-Value="Inspeccion.InspAperFabricante.DatosRegente.Nombre" />
