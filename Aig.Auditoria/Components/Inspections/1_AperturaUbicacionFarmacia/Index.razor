@implements IDisposable


<div class="kt-content  kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor" id="kt_content">

    <div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="kt-portlet">
                    <div class="kt-portlet__head">
                        <div class="kt-portlet__head-label">
                            <h3 class="kt-portlet__head-title">
                                @(Inspeccion != null && Inspeccion.Id > 0 ? "ACTA: " + Inspeccion.NumActa : @languageContainerService.Keys["NewInspection"]) - @(DataModel.Helper.Helper.GetDescription(Inspeccion.TipoActa))
                            </h3>
                        </div>
                        <div class="kt-portlet__head-toolbar">
                            <div class="kt-portlet__head-actions">
                                <button type="button" class="btn btn-danger btn-sm btn-bold"
                                @onclick="(e)=>{Cancel();}">
                                    @languageContainerService.Keys["Cerrar"]
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="kt-portlet__body kt-portlet__body--fit">
                        <div class="row">
                            <div class="col-12">
                                <div class="kt-section">
                                    <div class="table-responsive">
                                        <table class="table rounded table-striped">
                                            <thead class=thead-light>
                                                <tr>
                                                    <th colspan="2">@languageContainerService.Keys["Seleccione el Capítulo a Desarrollar"]</th>                                                    
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td scope="row">@languageContainerService.Keys["Información General"]</td>
                                                    <td style="text-align:right">
                                                        <button type="button" class="btn btn-info" @onclick="(e)=>{}">@languageContainerService.Keys["Select"]</button>
                                                        <!-- /btn-group -->
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td scope="row">@languageContainerService.Keys["Información del Solicitante"]</td>
                                                    <td style="text-align:right">
                                                        <button type="button" class="btn btn-info" @onclick="(e)=>{}">@languageContainerService.Keys["Select"]</button>
                                                        <!-- /btn-group -->
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td scope="row">@languageContainerService.Keys["Información del Regente"]</td>
                                                    <td style="text-align:right">
                                                        <button type="button" class="btn btn-info" @onclick="(e)=>{}">@languageContainerService.Keys["Select"]</button>
                                                        <!-- /btn-group -->
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td scope="row">@languageContainerService.Keys["Estructura Organizativa de la Farmacia"]</td>
                                                    <td style="text-align:right">
                                                        <button type="button" class="btn btn-info" @onclick="(e)=>{}">@languageContainerService.Keys["Select"]</button>
                                                        <!-- /btn-group -->
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td scope="row">@languageContainerService.Keys["Infraestructura de Farmacia"]</td>
                                                    <td style="text-align:right">
                                                        <button type="button" class="btn btn-info" @onclick="(e)=>{}">@languageContainerService.Keys["Select"]</button>
                                                        <!-- /btn-group -->
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td scope="row">@languageContainerService.Keys["Área Física de Farmacia"]</td>
                                                    <td style="text-align:right">
                                                        <button type="button" class="btn btn-info" @onclick="(e)=>{}">@languageContainerService.Keys["Select"]</button>
                                                        <!-- /btn-group -->
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td scope="row">@languageContainerService.Keys["Preguntas"]</td>
                                                    <td style="text-align:right">
                                                        <button type="button" class="btn btn-info" @onclick="(e)=>{}">@languageContainerService.Keys["Select"]</button>
                                                        <!-- /btn-group -->
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td scope="row">@languageContainerService.Keys["Área de Productos Controlados"]</td>
                                                    <td style="text-align:right">
                                                        <button type="button" class="btn btn-info" @onclick="(e)=>{}">@languageContainerService.Keys["Select"]</button>
                                                        <!-- /btn-group -->
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td scope="row">@languageContainerService.Keys["Área de Almacenamiento de Medicamentos"]</td>
                                                    <td style="text-align:right">
                                                        <button type="button" class="btn btn-info" @onclick="(e)=>{}">@languageContainerService.Keys["Select"]</button>
                                                        <!-- /btn-group -->
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td scope="row">@languageContainerService.Keys["Conclusiones"]</td>
                                                    <td style="text-align:right">
                                                        <button type="button" class="btn btn-info" @onclick="(e)=>{}">@languageContainerService.Keys["Select"]</button>
                                                        <!-- /btn-group -->
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td scope="row">@languageContainerService.Keys["Firmas"]</td>
                                                    <td style="text-align:right">
                                                        <button type="button" class="btn btn-info" @onclick="(e)=>{}">@languageContainerService.Keys["Select"]</button>
                                                        <!-- /btn-group -->
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@if (showSelectEstablecimiento)
{
    <Aig.Auditoria.Components.Inspections.SeleccionarEstablecimiento Data="@Inspeccion.DatosEstablecimiento"></Aig.Auditoria.Components.Inspections.SeleccionarEstablecimiento>
}