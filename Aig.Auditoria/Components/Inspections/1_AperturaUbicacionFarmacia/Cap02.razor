                                                                                Data=@LPaises TextProperty="Nombre" ValueProperty="Id" />
                                                                    <ValidationMessage For=@(() => Inspeccion.InspAperCambUbicFarm.DatosSolicitante.PaisResidencia) />
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-4">
                                                            <label>@languageContainerService.Keys["Provincia"]</label>
                                                            <div class="form-group">
                                                                <div class="form-line">
                                                                    <InputText class="form-control" @bind-Value="Inspeccion.InspAperCambUbicFarm.DatosSolicitante.Provincia" />
                                                                    <ValidationMessage For=@(() => Inspeccion.InspAperCambUbicFarm.DatosSolicitante.Provincia) />
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-4">
                                                            <label>@languageContainerService.Keys["Distrito"]</label>
                                                            <div class="form-group">
                                                                <div class="form-line">
                                                                    <InputText class="form-control" @bind-Value="Inspeccion.InspAperCambUbicFarm.DatosSolicitante.Distrito" />
                                                                    <ValidationMessage For=@(() => Inspeccion.InspAperCambUbicFarm.DatosSolicitante.Distrito) />
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-4">
                                                            <label>@languageContainerService.Keys["Corregimiento"]</label>
                                                            <div class="form-group">
                                                                <div class="form-line">
                                                                    <InputText class="form-control" @bind-Value="Inspeccion.InspAperCambUbicFarm.DatosSolicitante.Corregimiento" />
                                                                    <ValidationMessage For=@(() => Inspeccion.InspAperCambUbicFarm.DatosSolicitante.Corregimiento) />
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-12">
                                                            <label>@languageContainerService.Keys["Address"]</label>
                                                            <div class="form-group">
                                                                <div class="form-line">
                                                                    <InputText class="form-control" @bind-Value="Inspeccion.InspAperCambUbicFarm.DatosSolicitante.Direccion" />
                                                                    <ValidationMessage For=@(() => Inspeccion.InspAperCambUbicFarm.DatosSolicitante.Direccion) />
                                                                </div>
                                                            </div>
                                                        </div>*@
                                                        <div class="col-sm-4">
