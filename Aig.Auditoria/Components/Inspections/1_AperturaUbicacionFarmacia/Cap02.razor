                                        <EditForm OnValidSubmit="SaveData" EditContext="@editContext">
                                            <DataAnnotationsValidator />
                                            <div class="row clearfix">
                                                <div class="col-12">
                                                        <h5>@languageContainerService.Keys["Información del Solicitante"]</h5>
                                                </div>
                                            </div>
                                                <div class="row clearfix">

                                                        <div class="col-sm-8">
                                                            <label>@languageContainerService.Keys["FullName"]</label>
                                                            <div class="form-group">
                                                                <div class="form-line">
                                                                    <InputText class="form-control" @bind-Value="Inspeccion.InspAperCambUbicFarm.DatosSolicitante.Nombre" />
                                                                    <ValidationMessage For=@(() => Inspeccion.InspAperCambUbicFarm.DatosSolicitante.Nombre) />
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-4">
                                                            <label for="password">@languageContainerService.Keys["Tipo"]</label>
                                                            <div class="form-group">
                                                                <div class="form-line">
                                                                    <InputSelect @bind-Value="Inspeccion.InspAperCambUbicFarm.DatosSolicitante.Tipo" class="form-control">
                                                                @foreach (enumAUD_TipoSolicitante dt in Enum.GetValues(typeof(enumAUD_TipoSolicitante)))
                                                                {
                                                                                <option value="@dt">@(DataModel.Helper.Helper.GetDescription(dt))</option>
                                                                }
                                                                    </InputSelect>
                                                                    <ValidationMessage For=@(() => Inspeccion.InspAperCambUbicFarm.DatosSolicitante.Tipo) />
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-4">
                                                            <label>@languageContainerService.Keys["Nationality"]</label>
                                                            <div class="form-group">
                                                                <div class="form-line">                                                           
                                                                    <RadzenDropDown AllowClear="true" TValue="string" Class="form-control" @bind-Value=@Inspeccion.InspAperCambUbicFarm.DatosSolicitante.Nacionalidad
                                                                                AllowFiltering="true" FilterCaseSensitivity="@Radzen.FilterCaseSensitivity.CaseInsensitive" FilterOperator="@Radzen.StringFilterOperator.Contains"
                                                                                Data=@LPaises TextProperty="Nombre" ValueProperty="Nombre" />
                                                                    <ValidationMessage For=@(() => Inspeccion.InspAperCambUbicFarm.DatosSolicitante.Nacionalidad) />
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-4">
                                                            <label>@languageContainerService.Keys["Identification"]</label>
                                                            <div class="form-group">
                                                                <div class="form-line">
                                                                    <InputText class="form-control" @bind-Value="Inspeccion.InspAperCambUbicFarm.DatosSolicitante.Cedula" />
                                                                    <ValidationMessage For=@(() => Inspeccion.InspAperCambUbicFarm.DatosSolicitante.Cedula) />
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="col-sm-4">
                                                            <label>@languageContainerService.Keys["Email"]</label>
                                                            <div class="form-group">
                                                                <div class="form-line">
                                                                    <InputText class="form-control" @bind-Value="Inspeccion.InspAperCambUbicFarm.DatosSolicitante.Email" />
                                                                    <ValidationMessage For=@(() => Inspeccion.InspAperCambUbicFarm.DatosSolicitante.Email) />
                                                                </div>
                                                            </div>
                                                        </div>
                                                        @*<div class="col-sm-4">
                                                            <label>@languageContainerService.Keys["Residencia"]</label>
                                                            <div class="form-group">
                                                                <div class="form-line">                                                            
                                                                    <RadzenDropDown AllowClear="true" TValue="string" Class="form-control" @bind-Value=@Inspeccion.InspAperCambUbicFarm.DatosSolicitante.PaisResidencia
