@using DataModel.Helper;
@implements IDisposable

@if (Inspeccion?.InspGuiBPMFabCosmeticoMed?.FabCosmeticos != null)
{
    <div class="kt-content  kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor" id="kt_content">

        <div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">

            <div class="row">
                <div class="col-xl-12">
                    <div class="kt-portlet">
                        <div class="kt-portlet__head">
                            <div class="kt-portlet__head-label">
                                <h3 class="kt-portlet__head-title">
                                    @(Inspeccion != null && Inspeccion.Id > 0 ? "ACTA: " + Inspeccion.NumActa : @languageContainerService.Keys["NewInspection"]) - @(DataModel.Helper.Helper.GetDescription(Inspeccion.TipoActa))
                                </h3>
                            </div>
                            <div class="kt-portlet__head-toolbar">
                                <div class="kt-portlet__head-actions">
                                    <button type="button" class="btn btn-danger btn-sm btn-bold"
                                        @onclick="(e)=>{Cancel();}">
                                        @languageContainerService.Keys["Cerrar"]
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="kt-portlet__body kt-portlet__body--fit">                            
                            <div class="row">
                                <div class="col-12">
                                    <div class="kt-portlet__body">
                                        <EditForm OnValidSubmit="SaveData" EditContext="@editContext">
                                            <DataAnnotationsValidator />
                                            <div class="row clearfix">
                                                <div class="col-12">
                                                    <h5>@languageContainerService.Keys["ÁREAS DE PRODUCCIÓN - Fabricación de Cosméticos"]</h5>
                                                </div>
                                            </div>
                                            <div class="row clearfix">
                                                <!--begin::Section-->
                                                <div class="col-sm-12">
                                                    <div class="table-responsive">
                                                        <table class="table rounded table-striped">
                                                            <thead class=thead-light>
                                                                <tr>
                                                                    <th width="5%">@languageContainerService.Keys["Pto. Max"]</th>
                                                                    <th width="8%">@languageContainerService.Keys["Pto. Obten."]</th>
                                                                    <th width="30%">@languageContainerService.Keys["Título"]</th>
                                                                    <th width="5%">@languageContainerService.Keys["Artículo"]</th>
                                                                    <th width="5%">@languageContainerService.Keys["Evaluac."]</th>
                                                                    <th width="5%">@languageContainerService.Keys["Criterio"]</th>
                                                                    <th>@languageContainerService.Keys["Observaciones"]</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @if (Inspeccion?.InspGuiBPMFabCosmeticoMed?.FabCosmeticos?.LContenido != null)
                                                                {
                                                                    @foreach (var dt in Inspeccion.InspGuiBPMFabCosmeticoMed.FabCosmeticos.LContenido)
                                                                    {
                                                                        @if (dt.IsHeader)
                                                                        {
                                                                            <tr>
                                                                                <th colspan="7">@dt.Titulo</th>
                                                                            </tr>
                                                                        }
                                                                        else if (dt.IsSubHeader)
                                                                        {
                                                                            <tr>
                                                                                <td>@(dt.PuntosMax>0?dt.PuntosMax:"")</td>
                                                                                <td>
                                                                                    @*<InputNumber class="form-control" @bind-Value="dt.PuntosObtenido" />*@
                                                                                </td>
                                                                                <td>@dt.Titulo</td>
                                                                                <td>@dt.Articulo </td>
                                                                                <td></td>
                                                                                <td></td>
                                                                                <td></td>
                                                                            </tr>
                                                                        }
                                                                        else
                                                                        {
                                                                            <tr>
                                                                                <td>@(dt.PuntosMax>0?dt.PuntosMax:"")</td>
                                                                                <td>
                                                                                    <InputNumber class="form-control" @bind-Value="dt.PuntosObtenido" />
                                                                                </td>
                                                                                <td>@dt.Titulo</td>
                                                                                <td>@dt.Articulo</td>
                                                                                @foreach (var eva in dt.LEvaluacion)
                                                                                {
                                                                                    <td>
                                                                                        <InputSelect style="padding:0px!important;" @bind-Value="eva.Evaluacion" class="form-control">
                                                                                            @foreach (enumAUD_TipoSeleccion opt in Enum.GetValues(typeof(enumAUD_TipoSeleccion)))
                                                                                            {
                                                                                                <option value="@opt">@(DataModel.Helper.Helper.GetDescription(opt))</option>
                                                                                            }
                                                                                        </InputSelect>
                                                                                    </td>
                                                                                }
                                                                                <td>@dt.Criterio</td>                                                                                
                                                                                <td>
                                                                                    <InputTextArea rows="6" class="form-control" @bind-Value="dt.Observaciones" />
                                                                                </td>
                                                                            </tr>
                                                                        }
                                                                    }
                                                                }
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                                                                        
                                            <br><br>
                                            <div class="kt-portlet__foot" style="text-align:right;">
                                                <div class="kt-form__actions">
                                                    
                                                    <button type="submit" @onclick="(e)=>{exit=true;}"
                                                        class="btn btn-success waves-effect">
                                                        @languageContainerService.Keys["SaveExit"]
                                                    </button>

                                                    <button type="submit"
                                                            class="btn btn-info waves-effect">
                                                        @languageContainerService.Keys["Save"]
                                                    </button>

                                                    <button type="button" class="btn btn-danger waves-effect"
                                                    @onclick="(e)=>{Cancel();}">
                                                        @languageContainerService.Keys["Cerrar"]
                                                    </button>

                                                </div>
                                            </div>

                                        </EditForm>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
