@using DataModel.Helper;

<!-- Modal Creat/Edit -->
@if (Inspeccion != null && OpenDialog)
{
    //SELECCIONAR EL TIPO DE ACTA QUE SE QUIERE AGREGAR
    <div class="modal fade show" id="exampleModal" tabindex="-1" style="display: block;overflow-y: auto;" aria-modal="true" data-backdrop="static" role="dialog" aria-labelledby="staticBackdrop">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="formModal">@languageContainerService.Keys["SelectInspectionType"]</h5>
                    <button type="button" class="close" @onclick='(e)=>{Cancel();}'
                        aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!--begin::Section-->
                    <div class="kt-section">
                        <div class="table-responsive">
                            <table class="table rounded table-striped">
                                @*<thead class=thead-light>
                            <tr>
                            <th></th>
                            <th>@languageContainerService.Keys["Code"]</th>
                            <th>@languageContainerService.Keys["Name"]</th>
                            <th>@languageContainerService.Keys["Description"]</th>
                            <th></th>
                            </tr>
                            </thead>*@
                                <tbody>
                                    @foreach (enumAUD_TipoActa dt in Enum.GetValues(typeof(enumAUD_TipoActa)))
                                    {
                                        if (dt != enumAUD_TipoActa.None)
                                        {
                                            <tr>
                                                <td scope="row">@(DataModel.Helper.Helper.GetDescription<enumAUD_TipoActa>(dt))</td>
                                                <td style="text-align:right">
                                                    <button type="button" class="btn btn-primary" @onclick="(e)=>{SelectInspectionType(dt);}">@languageContainerService.Keys["Select"]</button>
                                                    <!-- /btn-group -->
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!--end::Section-->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger waves-effect" @onclick='(e)=>{Cancel();}'>
                        @languageContainerService.Keys["Cancel"]
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal-backdrop fade show"></div>
}
