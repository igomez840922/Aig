@if (User != null)
{
    <div class="modal fade show" id="exampleModal" tabindex="-1" style="display: block;overflow-y: auto;" aria-modal="true" data-backdrop="static" role="dialog" aria-labelledby="staticBackdrop">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="formModal">@languageContainerService.Keys["Edit"]</h5>
                    <button type="button" class="close" @onclick="(e)=>{Cancel();}"
                            aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <EditForm Model="@User" OnValidSubmit="SaveData">
                        <DataAnnotationsValidator />
                        <h4>@languageContainerService.Keys["Datos Personales"]</h4>
                        <div class="row clearfix">

                            <div class="col-sm-6">
                                <label for="password">@languageContainerService.Keys["Primer Nombre"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputText class="form-control" @bind-Value="User.UserProfile.FirstName" />
                                        <ValidationMessage For=@(() => User.UserProfile.FirstName) />
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <label for="password">@languageContainerService.Keys["Segundo Nombre"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputText class="form-control" @bind-Value="User.UserProfile.SecondName" />
                                        <ValidationMessage For=@(() => User.UserProfile.SecondName) />
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <label for="password">@languageContainerService.Keys["Primer Apellido"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputText class="form-control" @bind-Value="User.UserProfile.SureName" />
                                        <ValidationMessage For=@(() => User.UserProfile.SureName) />
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <label for="password">@languageContainerService.Keys["Segundo Apellido"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputText class="form-control" @bind-Value="User.UserProfile.SecondSurName" />
                                        <ValidationMessage For=@(() => User.UserProfile.SecondSurName) />
                                    </div>
                                </div>
                            </div>

                        </div>
                        <h4>@languageContainerService.Keys["Datos Contacto"]</h4>
                        <div class="row clearfix">

                            <div class="col-sm-6">
                                <label for="password">@languageContainerService.Keys["Teléfono"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputText class="form-control" @bind-Value="User.PhoneNumber" />
                                        <ValidationMessage For=@(() => User.PhoneNumber) />
                                    </div>
                                </div>
                            </div>                           

                        </div>

                        <br>
                        <div class="modal-footer">

                            <button type="submit"
                                    class="btn btn-info waves-effect">
                                @languageContainerService.Keys["Save"]
                            </button>

                            <button type="button" class="btn btn-danger waves-effect"
                            @onclick="(e)=>{Cancel();}">
                                @languageContainerService.Keys["Cancel"]
                            </button>
                        </div>


                    </EditForm>

                </div>


            </div>
        </div>
    </div>

}
