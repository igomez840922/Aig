@using DataModel.Helper;


<!-- Modal Creat/Edit -->
@if (attachment != null && OpenDialog)
{
    <div class="modal fade show" id="exampleModal" tabindex="-1" style="display: block;overflow-y: auto;" aria-modal="true" data-backdrop="static" role="dialog" aria-labelledby="staticBackdrop">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="formModal">@languageContainerService.Keys["UploadAttachment"]</h5>
                    <button type="button" class="close" @onclick="(e)=>{Cancel();}"
                        aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                               
                <EditForm Model="@attachment" OnValidSubmit="SaveData">
                    <DataAnnotationsValidator />
                    <div class="modal-body">
                         <div class="row clearfix">
                        <div class="col-sm-12">
                            <label>@languageContainerService.Keys["Description"]</label>
                            <div class="form-group">
                                <div class="form-line">
                                    <InputText class="form-control" @bind-Value="attachment.Description" />
                                    <ValidationMessage For=@(() => attachment.Description) />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-12">
                            <label>@languageContainerService.Keys["UploadFile"]</label>
                            <div class="form-group">
                                <div class="form-line">
                                    <InputFile OnChange="@OnFileSelection" accept=".doc, .docx, .xls, .xlsx, .pdf" name="profile_avatar"></InputFile>
                                    <ValidationMessage For=@(() => attachment.Description) />
                                </div>
                            </div>
                        </div>
                    </div>

                    <br>
                    </div>
                   
                    <div class="modal-footer">
                        <button type="submit"
                            class="btn btn-info waves-effect">
                            @languageContainerService.Keys["Save"]
                        </button>
                        <button type="button" class="btn btn-danger waves-effect"
                            @onclick="(e)=>{Cancel();}">
                            @languageContainerService.Keys["Cancel"]
                        </button>
                    </div>


                </EditForm>


            </div>
        </div>
    </div>


    <div class="modal-backdrop fade show"></div>
}


