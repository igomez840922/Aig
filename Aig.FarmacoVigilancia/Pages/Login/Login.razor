@page "/login"
@layout AccountLayout
@attribute [AllowAnonymous]

<div class="kt-login__wrapper">
	<div class="kt-login__signin">
		<div class="kt-login__head">
			<h3 class="kt-login__title">@languageContainerService.Keys["LoginToYourAccount"]</h3>
		</div>
		<div class="kt-login__form">
			<EditForm id="loginform" class="kt-form" OnValidSubmit="OnLogin" Model="loginRequest">
				<DataAnnotationsValidator />
				<div class="form-group">
					<InputText class="form-control" type="text" autocomplete="off" placeholder="@languageContainerService.Keys["UserName"]" @bind-Value="loginRequest.UserName" style="background:none!important;background-color:white!important;" />
					<ValidationMessage For="@(() => loginRequest.UserName)" />
				</div>
				<div class="form-group">
					<InputText class="form-control form-control-last" type="password" autocomplete="off" placeholder="@languageContainerService.Keys["Password"]" @bind-Value="loginRequest.Password" style="background:none!important;background-color:white!important;" />
					<ValidationMessage For="@(() => loginRequest.Password)" />
				</div>
				<div class="row kt-login__extra">
					<div class="col kt-align-left">
						<label class="kt-checkbox">
							<InputCheckbox type="checkbox" name="remember" @bind-Value="loginRequest.RememberMe"></InputCheckbox>@languageContainerService.Keys["RememberMe"]
							<span></span>
						</label>
					</div>
					<div class="col kt-align-right">
						<NavLink href="javascript:;" id="kt_login_forgot" class="kt-link">@languageContainerService.Keys["ForgetPassword"] ?</NavLink>
					</div>
				</div>
				<div class="kt-login__actions">
					<button class="btn btn-brand btn-pill btn-elevate" type="submit">@languageContainerService.Keys["SignIn"]</button>
				</div>
			</EditForm>
		</div>
	</div>

</div>
							
