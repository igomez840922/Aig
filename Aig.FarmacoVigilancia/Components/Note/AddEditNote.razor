@using DataModel.Helper;
@if (Nota != null)
{
    <div class="modal fade show" id="exampleModal" tabindex="-1" style="display: block;overflow-y: auto;" aria-modal="true" data-backdrop="static" role="dialog" aria-labelledby="staticBackdrop">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="formModal">@(Nota != null && Nota.Id > 0 ? @languageContainerService.Keys["Edit"] : @languageContainerService.Keys["New"]) @languageContainerService.Keys["Note"]</h5>
                    <button type="button" class="close" @onclick="(e)=>{Cancel();}"
                        aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <EditForm Model="@Nota" OnValidSubmit="SaveData">
                        <DataAnnotationsValidator />
                        <h4>@languageContainerService.Keys["GeneralInfo"]</h4>
                        <div class="row clearfix">
                            <div class="col-sm-3">
                                <label>@languageContainerService.Keys["Date"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <RadzenDatePicker TValue="DateTime?" @bind-Value="Nota.Fecha" ShowTime="false" DateFormat="dd/MM/yyyy" />
                                        <ValidationMessage For=@(() => Nota.Fecha) />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <label>@languageContainerService.Keys["Number"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputText class="form-control" @bind-Value="Nota.NumNota" />
                                        <ValidationMessage For=@(() => Nota.NumNota) />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <label for="password">@languageContainerService.Keys["Evaluator"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputSelect class="form-control" @bind-Value="Nota.EvaluadorId">
                                            <option value=""></option>
                                            @if (LPerson != null)
                                            {
                                                foreach (var dt in LPerson.Where(x => x.Evaluador))
                                                {
                                                    <option value="@dt.Id">@dt.NombreCompleto</option>
                                                }
                                            }
                                        </InputSelect>
                                        <ValidationMessage For=@(() => Nota.EvaluadorId) />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <label for="password">@languageContainerService.Keys["NoteType"]</label>
                                <div class="form-group">
                                    <InputSelect @bind-Value="Nota.TipoNota" class="form-control">
                                        <option value="">@languageContainerService.Keys["Select"]</option>
                                        @foreach (enumFMV_NoteType dt in Enum.GetValues(typeof(enumFMV_NoteType)))
                                        {
                                            <option value="@dt">@(DataModel.Helper.Helper.GetDescription(dt))</option>
                                        }
                                    </InputSelect>
                                    <ValidationMessage For=@(() => Nota.TipoNota) />
                                </div>
                            </div>
                        </div>
                        <div class="row clearfix">
                            

                            <div class="col-sm-6">
                                <label for="password">@languageContainerService.Keys["DestinyInstitute"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputSelect class="form-control" @bind-Value="Nota.InstitucionDestinoId">
                                            <option value="">@languageContainerService.Keys["Select"]</option>
                                            @if (LInstitucionDestino != null)
                                            {
                                                foreach (var dt in LInstitucionDestino)
                                                {
                                                    <option value="@dt.Id">@dt.Nombre</option>
                                                }
                                            }
                                        </InputSelect>
                                        <ValidationMessage For=@(() => Nota.InstitucionDestinoId) />
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <label>@languageContainerService.Keys["Addressee"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputText class="form-control" @bind-Value="Nota.Destinatario" />
                                        <ValidationMessage For=@(() => Nota.Destinatario) />
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="row clearfix">

                            <div class="col-sm-12">
                                <label>@languageContainerService.Keys["Description"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputTextArea rows="6" class="form-control" @bind-Value="Nota.Descripcion" />
                                        <ValidationMessage For=@(() => Nota.Descripcion) />
                                    </div>
                                </div>
                            </div>

                        </div>

                        <br>
                        <div class="modal-footer">

                            <button type="submit"
                                class="btn btn-info waves-effect">
                                @languageContainerService.Keys["Save"]
                            </button>

                            <button type="button" class="btn btn-danger waves-effect"
                                @onclick="(e)=>{Cancel();}">
                                @languageContainerService.Keys["Cancel"]
                            </button>
                        </div>


                    </EditForm>

                </div>


            </div>
        </div>
    </div>

}

<div class="modal-backdrop fade show"></div>