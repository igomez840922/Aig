@using DataModel.Helper;

@if (Data != null)
{
    <div class="modal fade show" id="exampleModal" tabindex="-1" style="display: block;overflow-y: auto;" aria-modal="true" data-backdrop="static" role="dialog" aria-labelledby="staticBackdrop">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="formModal">@(Data != null && Data.Id > 0 ? @languageContainerService.Keys["Edit"] : @languageContainerService.Keys["New"]) @languageContainerService.Keys["FT"]</h5>
                    <button type="button" class="close" @onclick="(e)=>{Cancel();}"
                            aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <EditForm Model="@Data" OnValidSubmit="SaveData">
                        <DataAnnotationsValidator />
                        <ul class="nav nav-tabs  nav-tabs-line nav-tabs-line-2x nav-tabs-line-primary nav-tabs-bold" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" data-toggle="tab" href="#generalInfo" role="tab">@languageContainerService.Keys["GeneralInfo"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="#products" role="tab">@languageContainerService.Keys["Notificaciones"]</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="generalInfo" role="tabpanel">
                                <h4>@languageContainerService.Keys["GeneralInfo"]</h4>
                                <div class="row clearfix">
                                    <div class="col-sm-4">
                                        <label>@languageContainerService.Keys["Código del CNFV"]</label>
                                        <div class="form-group">
                                            <div class="form-line">
                                                <InputText class="form-control" @bind-Value="Data.CodCNFV" />
                                                <ValidationMessage For=@(() => Data.CodCNFV) />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <label>@languageContainerService.Keys["Código Externo"]</label>
                                        <div class="form-group">
                                            <div class="form-line">
                                                <InputText class="form-control" @bind-Value="Data.CodExt" />
                                                <ValidationMessage For=@(() => Data.CodExt) />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <label>
                                            @languageContainerService.Keys["Fecha de Recibido (CNFV)"]
                                        </label>
                                        <div class="form-group">
                                            <div class="form-line">
                                                <RadzenDatePicker TValue="DateTime?" @bind-Value="Data.FechaRecibidoCNFV" ShowTime="false" DateFormat="dd/MM/yyyy" />
                                                <ValidationMessage For=@(() => Data.FechaRecibidoCNFV) />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <label>
                                            @languageContainerService.Keys["Fecha Entrega a Evaluador"]
                                        </label>
                                        <div class="form-group">
                                            <div class="form-line">
                                                <RadzenDatePicker TValue="DateTime?" @bind-Value="Data.FechaEntregaEva" ShowTime="false" DateFormat="dd/MM/yyyy" />
                                                <ValidationMessage For=@(() => Data.FechaEntregaEva) />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <label for="password">@languageContainerService.Keys["Evaluator"]</label>
                                        <div class="form-group">
                                            <div class="form-line">
                                                @* <InputSelect class="form-control"
                                            ValueExpression="@(() => Data.EvaluadorId)"
                                            Value="@Data.EvaluadorId"
                                            ValueChanged="@((long? value) => OnEvaluatorChange(value))">
                                            @if (lEvaluators != null)
                                            {
                                            foreach (var dt in lEvaluators.Where(x => x.Evaluador))
                                            {
                                            <option value="@dt.Id">@dt.NombreCompleto</option>
                                            }
                                            }
                                            </InputSelect>*@
                                                <RadzenDropDown AllowClear="true" TValue="long?" Class="form-control" @bind-Value=@Data.EvaluadorId
                                                                AllowFiltering="true" FilterCaseSensitivity="@Radzen.FilterCaseSensitivity.CaseInsensitive" FilterOperator="@Radzen.StringFilterOperator.Contains"
                                                                Data=@lEvaluators TextProperty="NombreCompleto" ValueProperty="Id"
                                                                Change=@(args => {OnEvaluatorChange((args!=null?(long)args:null));}) />

                                                <ValidationMessage For=@(() => Data.EvaluadorId) />
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="row clearfix">
                                    <div class="col-sm-4">
                                        <label>@languageContainerService.Keys["Fármaco Sospechoso (Comercial)"]</label>
                                        <div class="form-group">
                                            <div class="form-line">
                                                <InputText class="form-control" @bind-Value="Data.FarmacoSospechosoComercial" />
                                                <ValidationMessage For=@(() => Data.FarmacoSospechosoComercial) />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <label>@languageContainerService.Keys["Fármaco Sospechoso (DCI)"]</label>
                                        <div class="form-group">
                                            <div class="form-line">
                                                <InputText class="form-control" @bind-Value="Data.FarmacoSospechosoDci" />
                                                <ValidationMessage For=@(() => Data.FarmacoSospechosoDci) />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane" id="products" role="tabpanel">
                                <h4>@languageContainerService.Keys["Notificaciones"]</h4>
                                <div class="row clearfix">
                                    <div class="col-9" style="text-align:left;">
                                    </div>
                                    <div class="col-3" style="text-align:right;">
                                        <button type="button" @onclick="(e)=>{OpenProduct();}"
                                                class="btn btn-sm btn-outline-primary waves-effect">
                                            @languageContainerService.Keys["Add"]
                                        </button>
                                    </div>
                                </div>
                                <!--begin::Section-->
                                <div class="kt-section">
                                    <div class="table-responsive">
                                        <table class="table rounded table-striped">
                                            <thead class=thead-light>
                                                <tr>
                                                    <th>@languageContainerService.Keys["Presentación"]</th>
                                                    <th>@languageContainerService.Keys["ATC"]</th>
                                                    <th>@languageContainerService.Keys["Sub-grupo Terapéutico"]</th>
                                                    <th>@languageContainerService.Keys["Fabricante"]</th>
                                                    <th>@languageContainerService.Keys["Lote"]</th>
                                                    <th>@languageContainerService.Keys["Expira"]</th>
                                                    <th>@languageContainerService.Keys["Reg. Sanitario"]</th>
                                                    <th>@languageContainerService.Keys["Tipo de Notificador"]</th>
                                                    <th>@languageContainerService.Keys["Tipo de Organización/Institución"]</th>
                                                    <th>@languageContainerService.Keys["Provincia/Región/Origen"]</th>
                                                    <th>@languageContainerService.Keys["Nombre de Organización/Institución"]</th>
                                                    <th>@languageContainerService.Keys["Notificador"]</th>
                                                    <th>@languageContainerService.Keys["Incidencia de Caso"]</th>
                                                    <th>@languageContainerService.Keys["Revisión de RS"]</th>
                                                    <th>@languageContainerService.Keys["Monitoreo"]</th>
                                                    <th>@languageContainerService.Keys["Notificación al RFV"]</th>
                                                    <th>@languageContainerService.Keys["Ctr. de Calidad"]</th>
                                                    <th>@languageContainerService.Keys["Result. Ctr. de Calidad"]</th>
                                                    <th>@languageContainerService.Keys["Inv. de Campo"]</th>
                                                    <th>@languageContainerService.Keys["Inv. al DAC"]</th>
                                                    <th>@languageContainerService.Keys["Acciones Reg. Recomendadas"]</th>
                                                    <th>@languageContainerService.Keys["Grado"]</th>
                                                    <th>@languageContainerService.Keys["Fecha del Tramite"]</th>
                                                    <th>@languageContainerService.Keys["Fecha de Evaluación"]</th>
                                                    <th>@languageContainerService.Keys["Estatus"]</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Data != null && Data.LNotificaciones != null)
                                                {
                                                    @foreach (var dt in Data.LNotificaciones)
                                                    {
                                                        <tr>
                                                            <td scope="row">@dt.Presentacion</td>
                                                            <td>@dt.Atc</td>
                                                            <td>@dt.SubGrupoTer</td>
                                                            <td>@dt.Fabricante</td>
                                                            <td>@dt.Lote</td>
                                                            <td>@(dt.Expira?.ToString("dd/MM/yyyy"))</td>
                                                            <td>@dt.RegSanitario</td>
                                                            <td>@DataModel.Helper.Helper.GetDescription(dt.TipoNotificador)</td>
                                                            <td>@DataModel.Helper.Helper.GetDescription(dt.TipoOrgInst)</td>
                                                            <td>@dt.ProvRegionOrigen</td>
                                                            <td>@dt.NombreOrgInst</td>
                                                            <td>@dt.Notificador</td>
                                                            <td>@DataModel.Helper.Helper.GetDescription(dt.IncidenciaCaso)</td>
                                                            <td>@DataModel.Helper.Helper.GetDescription(dt.FallaReportada.RevisionRs)</td>
                                                            <td>@DataModel.Helper.Helper.GetDescription(dt.FallaReportada.Monitoreo)</td>
                                                            <td>@DataModel.Helper.Helper.GetDescription(dt.FallaReportada.NotificacionRFV)</td>
                                                            <td>@DataModel.Helper.Helper.GetDescription(dt.FallaReportada.ControlCalidad)</td>
                                                            <td>@DataModel.Helper.Helper.GetDescription(dt.FallaReportada.ResultControlCalidad)</td>
                                                            <td>@DataModel.Helper.Helper.GetDescription(dt.FallaReportada.InvestCampo)</td>
                                                            <td>@DataModel.Helper.Helper.GetDescription(dt.FallaReportada.InvestDAC)</td>
                                                            <td>@DataModel.Helper.Helper.GetDescription(dt.FallaReportada.AccRegRecomendada)</td>
                                                            <td>@dt.FallaReportada.Grado</td>
                                                            <td>@(dt.FechaTramite?.ToString("dd/MM/yyyy"))</td>
                                                            <td>@(dt.FechaEvalua?.ToString("dd/MM/yyyy"))</td>
                                                            <td>@DataModel.Helper.Helper.GetDescription(dt.Estatus)</td>
                                                            <td style="text-align:right">
                                                                <div class="btn-group">
                                                                    <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">@languageContainerService.Keys["Actions"]</button>
                                                                    <div class="dropdown-menu">
                                                                        <a class="dropdown-item" href="javascript:void(0)" @onclick="() => OpenProduct(dt)" data-toggle="modal" data-target="#modal_createedit" data-ktportlet-tool="edit"><i class="fa fa-edit"></i>@languageContainerService.Keys["Edit"]</a>
                                                                        <a class="dropdown-item" href="javascript:void(0)" @onclick="() => RemoveProduct(dt)"><i class="fa fa-trash"></i>@languageContainerService.Keys["Delete"]</a>
                                                                    </div>
                                                                </div>
                                                                <!-- /btn-group -->
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <br>
                        <div class="modal-footer">

                            <button type="submit"
                                    class="btn btn-info waves-effect">
                                @languageContainerService.Keys["Save"]
                            </button>

                            <button type="button" class="btn btn-danger waves-effect"
                            @onclick="(e)=>{Cancel();}">
                                @languageContainerService.Keys["Cancel"]
                            </button>
                        </div>


                    </EditForm>

                </div>


            </div>
        </div>
    </div>

}


@if (OpenAddEditNotification)
{
    <AddEditNotification Notification="@Notificacion"></AddEditNotification>
}

<div class="modal-backdrop fade show"></div>
