@using DataModel.Helper;


<!-- Modal Creat/Edit -->
@if (Product != null)
{
    <div class="modal fade show" id="exampleModal" tabindex="-1" style="display: block;overflow-y: auto;" aria-modal="true" data-backdrop="static" role="dialog" aria-labelledby="staticBackdrop">
        <div class="modal-dialog  modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="formModal">@(Product != null && Product.Id > 0 ? @languageContainerService.Keys["EditProduct"] : @languageContainerService.Keys["NewProduct"])</h5>
                    <button type="button" class="close" @onclick="(e)=>{Cancel();}"
                        aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <EditForm Model="@Product" OnValidSubmit="SaveData">
                        <DataAnnotationsValidator />

                        <div class="row clearfix">

                            <div class="col-sm-4">
                                <label>@languageContainerService.Keys["NumberOfHealthRegister"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputText class="form-control" @bind-Value="Product.RegSanitario" />
                                        <ValidationMessage For=@(() => Product.RegSanitario) />
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-8">
                                <label>@languageContainerService.Keys["CommercialName"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputText class="form-control" @bind-Value="Product.NomComercial" />
                                        <ValidationMessage For=@(() => Product.NomComercial) />
                                    </div>
                                </div>
                            </div>
                           
                        </div>
                        <div class="row clearfix">                           

                            <div class="col-sm-4">
                                <label for="password">@languageContainerService.Keys["Laboratory"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputSelect @bind-Value="Product.LaboratorioId" class="form-control">
                                            @if (lLaboratorio != null)
                                            {
                                                foreach (var dt in lLaboratorio)
                                                {
                                                    <option value="@dt.Id">@dt.Nombre</option>
                                                }
                                            }
                                        </InputSelect>
                                        <ValidationMessage For=@(() => Product.LaboratorioId) />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br>
                        <div class="modal-footer">
                            <button type="submit"
                                class="btn btn-info waves-effect">
                                @languageContainerService.Keys["Save"]
                            </button>
                            <button type="button" class="btn btn-danger waves-effect"
                                @onclick="(e)=>{Cancel();}">
                                @languageContainerService.Keys["Cancel"]
                            </button>
                        </div>


                    </EditForm>

                </div>


            </div>
        </div>
    </div>


}

