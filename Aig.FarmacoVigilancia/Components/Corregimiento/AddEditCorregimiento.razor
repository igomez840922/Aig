<!-- Modal Creat/Edit -->
@if (Corregimiento != null && OpenDialog)
{
    <div class="modal fade show" id="exampleModal" tabindex="-1" style="display: block;overflow-y: auto;" aria-modal="true" data-backdrop="static" role="dialog" aria-labelledby="staticBackdrop">
        <div class="modal-dialog  modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="formModal">@(Corregimiento != null && Corregimiento.Id > 0 ? @languageContainerService.Keys["EditCorregimiento"] : @languageContainerService.Keys["NewCorregimiento"])</h5>
                    <button type="button" class="close" @onclick="(e)=>{Cancel();}"
                        aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <EditForm Model="@Corregimiento" OnValidSubmit="SaveData">
                        <DataAnnotationsValidator />
                        <div class="row clearfix">
                            <div class="col-sm-4">
                                <label>@languageContainerService.Keys["Country"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        @*<InputSelect class="form-control"
                                                 ValueExpression="@(() => IdPais)"
                                                 Value="@IdPais"
                                                 ValueChanged="@((long value) => OnCountryChange(value))">
                                            @if (LPaises != null)
                                            {
                                                foreach (var dt in LPaises)
                                                {
                                                    <option value="@dt.Id">@dt.Nombre</option>
                                                }
                                            }
                                        </InputSelect>*@
                                        <RadzenDropDown AllowClear="true" TValue="long" Class="form-control" @bind-Value=@IdPais
                                                        AllowFiltering="true" FilterCaseSensitivity="@Radzen.FilterCaseSensitivity.CaseInsensitive" FilterOperator="@Radzen.StringFilterOperator.Contains"
                                                        Data=@LPaises TextProperty="Nombre" ValueProperty="Id"
                                                        Change=@(args => {OnCountryChange((args!=null?(long)args:0));}) />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <label>@languageContainerService.Keys["Provinces"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                       @* <InputSelect class="form-control"
                                                 ValueExpression="@(() => IdProvincia)"
                                                 Value="@IdProvincia"
                                                 ValueChanged="@((long value) => OnProvincesChange(value))">
                                            @if (LProvincias != null)
                                            {
                                                foreach (var dt in LProvincias)
                                                {
                                                    <option value="@dt.Id">@dt.Nombre</option>
                                                }
                                            }
                                        </InputSelect>*@
                                        <RadzenDropDown AllowClear="true" TValue="long" Class="form-control" @bind-Value=@IdProvincia
                                                        AllowFiltering="true" FilterCaseSensitivity="@Radzen.FilterCaseSensitivity.CaseInsensitive" FilterOperator="@Radzen.StringFilterOperator.Contains"
                                                        Data=@LProvincias TextProperty="Nombre" ValueProperty="Id"
                                                        Change=@(args => {OnProvincesChange((args!=null?(long)args:0));}) />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <label>@languageContainerService.Keys["District"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        @*<InputSelect class="form-control"
                                                 ValueExpression="@(() => IdDistrito)"
                                                 Value="@IdDistrito"
                                                 ValueChanged="@((long value) => OnDistrictChange(value))">
                                            @if (LDistrito != null)
                                            {
                                                foreach (var dt in LDistrito)
                                                {
                                                    <option value="@dt.Id">@dt.Nombre</option>
                                                }
                                            }
                                        </InputSelect>*@
                                        <RadzenDropDown AllowClear="true" TValue="long?" Class="form-control" @bind-Value=@Corregimiento.DistritoId
                                                        AllowFiltering="true" FilterCaseSensitivity="@Radzen.FilterCaseSensitivity.CaseInsensitive" FilterOperator="@Radzen.StringFilterOperator.Contains"
                                                        Data=@LDistrito TextProperty="Nombre" ValueProperty="Id"
                                                        Change=@(args => {OnDistrictChange((args!=null?(long)args:null));}) />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row clearfix">
                            <div class="col-sm-8">
                                <label>@languageContainerService.Keys["Name"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputText class="form-control" @bind-Value="Corregimiento.Nombre" />
                                        <ValidationMessage For=@(() => Corregimiento.Nombre) />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <label>@languageContainerService.Keys["Code"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputText class="form-control" @bind-Value="Corregimiento.Codigo" />
                                        <ValidationMessage For=@(() => Corregimiento.Codigo) />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <br>
                        <div class="modal-footer">
                            <button type="submit"
                                class="btn btn-info waves-effect">
                                @languageContainerService.Keys["Save"]
                            </button>
                            <button type="button" class="btn btn-danger waves-effect"
                                @onclick="(e)=>{Cancel();}">
                                @languageContainerService.Keys["Cancel"]
                            </button>
                        </div>


                    </EditForm>

                </div>


            </div>
        </div>
    </div>

    <div class="modal-backdrop fade show"></div>
}

