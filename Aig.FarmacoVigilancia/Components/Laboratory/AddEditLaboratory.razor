@using DataModel.Helper;

@if (Laboratorio != null)
{
    <div class="modal fade show" id="exampleModal" tabindex="-1" style="display: block;overflow-y: auto;" aria-modal="true" data-backdrop="static" role="dialog" aria-labelledby="staticBackdrop">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="formModal">@(Laboratorio != null && Laboratorio.Id > 0 ? @languageContainerService.Keys["Edit"] : @languageContainerService.Keys["New"]) @languageContainerService.Keys["Business"]</h5>
                    <button type="button" class="close" @onclick="(e)=>{Cancel();}"
                        aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <EditForm Model="@Laboratorio" OnValidSubmit="SaveData">
                        <DataAnnotationsValidator />
                        <h4>@languageContainerService.Keys["GeneralInfo"]</h4>
                        <div class="row clearfix">
                            <div class="col-sm-9">
                                <label>@languageContainerService.Keys["FullName"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputText class="form-control" @bind-Value="Laboratorio.Nombre" />
                                        <ValidationMessage For=@(() => Laboratorio.Nombre) />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <label for="password">@languageContainerService.Keys["Type"]</label>
                                <div class="form-group">
                                    <InputSelect @bind-Value="Laboratorio.TipoLaboratorio" class="form-control">
                                        <option value="">@languageContainerService.Keys["Select"]</option>
                                        @foreach (enum_LaboratoryType dt in Enum.GetValues(typeof(enum_LaboratoryType)))
                                        {
                                            <option value="@dt">@(DataModel.Helper.Helper.GetDescription(dt))</option>
                                        }
                                    </InputSelect>
                                    <ValidationMessage For=@(() => Laboratorio.TipoLaboratorio) />
                                </div>
                            </div>
                        </div>
                        <div class="row clearfix">
                            <div class="col-sm-3">
                                <label for="password">@languageContainerService.Keys["UbicationType"]</label>
                                <div class="form-group">
                                    <InputSelect @bind-Value="Laboratorio.TipoUbicacion" class="form-control">
                                        <option value="">@languageContainerService.Keys["Select"]</option>
                                        @foreach (enum_UbicationType dt in Enum.GetValues(typeof(enum_UbicationType)))
                                        {
                                            <option value="@dt">@(DataModel.Helper.Helper.GetDescription(dt))</option>
                                        }
                                    </InputSelect>
                                    <ValidationMessage For=@(() => Laboratorio.TipoUbicacion) />
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <label for="password">@languageContainerService.Keys["Country"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputSelect class="form-control" @bind-Value="Laboratorio.Pais">
                                            <option value="">@languageContainerService.Keys["Select"]</option>
                                            @if (LPaises != null)
                                            {
                                                foreach (var dt in LPaises)
                                                {
                                                    <option value="@dt.Nombre">@dt.Nombre</option>
                                                }
                                            }
                                        </InputSelect>
                                        <ValidationMessage For=@(() => Laboratorio.Pais) />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <label>@languageContainerService.Keys["Address"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputText class="form-control" @bind-Value="Laboratorio.Direccion" />
                                        <ValidationMessage For=@(() => Laboratorio.Direccion) />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row clearfix">
                            <div class="col-sm-6">
                                <label>@languageContainerService.Keys["PhoneNumber"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputText class="form-control" @bind-Value="Laboratorio.Telefono" />
                                        <ValidationMessage For=@(() => Laboratorio.Telefono) />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <label>@languageContainerService.Keys["Email"]</label>
                                <div class="form-group">
                                    <div class="form-line">
                                        <InputText class="form-control" @bind-Value="Laboratorio.Correo" />
                                        <ValidationMessage For=@(() => Laboratorio.Correo) />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br>
                        <div class="modal-footer">

                            <button type="submit"
                                class="btn btn-info waves-effect">
                                @languageContainerService.Keys["Save"]
                            </button>

                            <button type="button" class="btn btn-danger waves-effect"
                                @onclick="(e)=>{Cancel();}">
                                @languageContainerService.Keys["Cancel"]
                            </button>
                        </div>


                    </EditForm>

                </div>


            </div>
        </div>
    </div>

}

<div class="modal-backdrop fade show"></div>
