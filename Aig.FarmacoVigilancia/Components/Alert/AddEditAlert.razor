@using DataModel.Helper;
@if (Alerta != null)
{
    <div class="modal fade show" id="exampleModal" tabindex="-1" style="display: block;overflow-y: auto;" aria-modal="true" data-backdrop="static" role="dialog" aria-labelledby="staticBackdrop">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="formModal">@(Alerta != null && Alerta.Id > 0 ? @languageContainerService.Keys["Edit"] : @languageContainerService.Keys["New"]) @languageContainerService.Keys["Alert"]</h5>
                    <button type="button" class="close" @onclick="(e)=>{Cancel();}"
                        aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <EditForm Model="@Alerta" OnValidSubmit="SaveData">
                        <DataAnnotationsValidator />
                        <ul class="nav nav-tabs  nav-tabs-line nav-tabs-line-2x nav-tabs-line-primary nav-tabs-bold" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" data-toggle="tab" href="#generalInfo" role="tab">@languageContainerService.Keys["GeneralInfo"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="#specificInfo" role="tab">@languageContainerService.Keys["SpecificInfo"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="#alertnoteInfo" role="tab">@languageContainerService.Keys["AlertInfo"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="#attachments" role="tab">@languageContainerService.Keys["Attachments"]</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="generalInfo" role="tabpanel">
                                <h4>@languageContainerService.Keys["GeneralInfo"]</h4>
                                <div class="row clearfix">
                                    <div class="col-sm-3">
                                        <label>@languageContainerService.Keys["ReceptionDateCNFV"]</label>
                                        <div class="form-group">
                                            <div class="form-line">
                                                <RadzenDatePicker Max="DateTime.Today" TValue="DateTime?" @bind-Value="Alerta.FechaRecepcion" ShowTime="false" DateFormat="dd/MM/yyyy" />

                                                <ValidationMessage For=@(() => Alerta.FechaRecepcion) />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <label>@languageContainerService.Keys["EvaluatorDate"]</label>
                                        <div class="form-group">
                                            <div class="form-line">
                                                <RadzenDatePicker Max="DateTime.Today" Min="Alerta.FechaRecepcion" TValue="DateTime?" @bind-Value="Alerta.FechaEntregaEvaluador" ShowTime="false" DateFormat="dd/MM/yyyy" />
                                                <ValidationMessage For=@(() => Alerta.FechaEntregaEvaluador) />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <label>@languageContainerService.Keys["EvaluationDate"]</label>
                                        <div class="form-group">
                                            <div class="form-line">
                                                <RadzenDatePicker Max="DateTime.Today" Min="Alerta.FechaEntregaEvaluador" TValue="DateTime?" @bind-Value="Alerta.FechaEvaluacion" ShowTime="false" DateFormat="dd/MM/yyyy" />
                                                <ValidationMessage For=@(() => Alerta.FechaEvaluacion) />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <label for="password">@languageContainerService.Keys["Evaluator"]</label>
                                        <div class="form-group">
                                            <div class="form-line">
                                                <RadzenDropDown AllowClear="true" TValue="long?" Class="form-control" @bind-Value=@Alerta.EvaluadorId
                                                                AllowFiltering="true" FilterCaseSensitivity="@Radzen.FilterCaseSensitivity.CaseInsensitive" FilterOperator="@Radzen.StringFilterOperator.Contains"
                                                                Data=@(LPerson?.Where(x=>x.Evaluador)) TextProperty="NombreCompleto" ValueProperty="Id" />
                                                <ValidationMessage For=@(() => Alerta.EvaluadorId) />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row clearfix">

                                    <div class="col-sm-3">
                                        <label for="password">@languageContainerService.Keys["AlertOrigin"]</label>
                                        <div class="form-group">
                                            <div class="form-line">
                                                <InputSelect class="form-control" @bind-Value="Alerta.OrigenAlertaId">
                                                    <option value=""></option>
                                                    @if (LOriginAlert != null)
                                                    {
                                                        foreach (var dt in LOriginAlert)
                                                        {
                                                            <option value="@dt.Id">@dt.Nombre</option>
                                                        }
                                                    }
                                                </InputSelect>
                                                <ValidationMessage For=@(() => Alerta.OrigenAlertaId) />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-sm-3">
                                        <label for="password">@languageContainerService.Keys["AlertType"]</label>
                                        <div class="form-group">
                                            <InputSelect @bind-Value="Alerta.TipoAlerta" class="form-control">
                                                @foreach (enumFMV_AlertType dt in Enum.GetValues(typeof(enumFMV_AlertType)))
                                                {
                                                    <option value="@dt">@(DataModel.Helper.Helper.GetDescription(dt))</option>
                                                }
                                            </InputSelect>
                                            <ValidationMessage For=@(() => Alerta.TipoAlerta) />
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        <label>@languageContainerService.Keys["Product"]</label>
                                        <div class="input-group">
                                            @*<input type="text" class="form-control" @bind="dataModel.Filter" name="Filter" />*@
                                            <InputText class="form-control" @bind-Value="Alerta.Producto"/>
                                            <div class="input-group-append">
                                                <button type="button" class="btn btn-secondary" @onclick="(e)=>{OpenSearchMedicine();}"><i class="fa fa-search"></i></button>
                                            </div>
                                        </div>
                                        <ValidationMessage For=@(() => Alerta.Producto) />
                                    </div>

                                </div>
                                <div class="row clearfix">
                                    
                                    <div class="col-sm-12">
                                        <label>@languageContainerService.Keys["DCI"]</label>
                                        <div class="form-group">
                                            <div class="form-line">
                                                <div class="input-group">
                                                    <InputText class="form-control" @bind-Value="Alerta.DCI" />
                                                    <div class="input-group-append">
                                                        <button type="button" class="btn btn-secondary" @onclick="(e)=>{OpenSearchFarmaco();}"><i class="fa fa-search"></i></button>
                                                    </div>
                                                </div>
                                                <ValidationMessage For=@(() => Alerta.DCI) />
                                            </div>
                                        </div>                                        
                                    </div>
                                </div>
                                <div class="row clearfix">

                                    <div class="col-sm-12">
                                        <label>@languageContainerService.Keys["Título/Descripción"]</label>
                                        <div class="form-group">
                                            <div class="form-line">
                                                <InputTextArea rows="6" class="form-control" @bind-Value="Alerta.Descripcion" />
                                                <ValidationMessage For=@(() => Alerta.Descripcion) />
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="tab-pane" id="specificInfo" role="tabpanel">
                                <h4>@languageContainerService.Keys["SpecificInfo"]</h4>
                                <div class="row clearfix">
                                    <div class="col-sm-3">
                                        <label for="password">@languageContainerService.Keys["RecomProfPaciente"]</label>
                                        <div class="form-group">
                                            <InputSelect @bind-Value="Alerta.RecomProfPaciente" class="form-control">
                                                <option value="false">No</option>
                                                <option value="true">Si</option>
                                            </InputSelect>
                                            <ValidationMessage For=@(() => Alerta.RecomProfPaciente) />
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <label for="password">@languageContainerService.Keys["ActualizaMonografias"]</label>
                                        <div class="form-group">
                                            <InputSelect @bind-Value="Alerta.ActualizaMonografias" class="form-control">
                                                <option value="false">No</option>
                                                <option value="true">Si</option>
                                            </InputSelect>
                                            <ValidationMessage For=@(() => Alerta.ActualizaMonografias) />
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <label for="password">@languageContainerService.Keys["ConsentFirmado"]</label>
                                        <div class="form-group">
                                            <InputSelect @bind-Value="Alerta.ConsentFirmado" class="form-control">
                                                <option value="false">No</option>
                                                <option value="true">Si</option>
                                            </InputSelect>
                                            <ValidationMessage For=@(() => Alerta.ConsentFirmado) />
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <label for="password">@languageContainerService.Keys["SuspencionRetiroLote"]</label>
                                        <div class="form-group">
                                            <InputSelect @bind-Value="Alerta.SuspencionRetiroLote" class="form-control">
                                                <option value="false">No</option>
                                                <option value="true">Si</option>
                                            </InputSelect>
                                            <ValidationMessage For=@(() => Alerta.SuspencionRetiroLote) />
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <label for="password">@languageContainerService.Keys["SuspencCancelRegSanitario"]</label>
                                        <div class="form-group">
                                            <InputSelect @bind-Value="Alerta.SuspencCancelRegSanitario" class="form-control">
                                                <option value="false">No</option>
                                                <option value="true">Si</option>
                                            </InputSelect>
                                            <ValidationMessage For=@(() => Alerta.SuspencCancelRegSanitario) />
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <label for="password">@languageContainerService.Keys["Monitoreo"]</label>
                                        <div class="form-group">
                                            <InputSelect @bind-Value="Alerta.Monitoreo" class="form-control">
                                                <option value="false">No</option>
                                                <option value="true">Si</option>
                                            </InputSelect>
                                            <ValidationMessage For=@(() => Alerta.Monitoreo) />
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <label for="password">@languageContainerService.Keys["OtrasConsideraciones"]</label>
                                        <div class="form-group">
                                            <InputSelect @bind-Value="Alerta.OtrasConsideraciones" class="form-control">
                                                <option value="false">No</option>
                                                <option value="true">Si</option>
                                            </InputSelect>
                                            <ValidationMessage For=@(() => Alerta.OtrasConsideraciones) />
                                        </div>
                                    </div>
                                    @if (Alerta.OtrasConsideraciones)
                                    {
                                        <div class="col-sm-12">
                                            <label>@languageContainerService.Keys["Descripcion"]</label>
                                            <div class="form-group">
                                                <div class="form-line">
                                                    <InputTextArea rows="6" class="form-control" @bind-Value="Alerta.OtrasDescripcion" />
                                                    <ValidationMessage For=@(() => Alerta.OtrasDescripcion) />
                                                </div>
                                            </div>
                                        </div>
                                    }
                                   

                                </div>
                            </div>
                            <div class="tab-pane" id="alertnoteInfo" role="tabpanel">
                                <h4>@languageContainerService.Keys["Información de la Alerta"]</h4>
                                <div class="row clearfix">
                                    <div class="col-sm-6">
                                        <label>@languageContainerService.Keys["Número de la Alerta"]</label>
                                        <div class="form-group">
                                            <div class="form-line">
                                                <InputText class="form-control" @bind-Value="Alerta.NumNota" />
                                                <ValidationMessage For=@(() => Alerta.NumNota) />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <label for="password">@languageContainerService.Keys["Estado"]</label>
                                        <div class="form-group">
                                            <InputSelect @bind-Value="Alerta.Estado" class="form-control">
                                                @foreach (enumFMV_AlertaNotaStatus dt in Enum.GetValues(typeof(enumFMV_AlertaNotaStatus)))
                                                {
                                                    <option value="@dt">@(DataModel.Helper.Helper.GetDescription(dt))</option>
                                                }
                                            </InputSelect>
                                            <ValidationMessage For=@(() => Alerta.Estado) />
                                        </div>
                                    </div>
                                </div>
                                <div class="row clearfix">
                                    <div class="col-sm-12">
                                        <label>@languageContainerService.Keys["Observatios"]</label>
                                        <div class="form-group">
                                            <div class="form-line">
                                                <InputTextArea rows="6" class="form-control" @bind-Value="Alerta.Observaciones" />
                                                <ValidationMessage For=@(() => Alerta.Observaciones) />
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="tab-pane" id="attachments" role="tabpanel">
                                <h5>@languageContainerService.Keys["Attachments"]</h5>
                                <div class="row clearfix">
                                    <div class="col-9" style="text-align:left;">
                                    </div>
                                    <div class="col-3" style="text-align:right;">
                                        <button type="button" @onclick="(e)=>{OpenAttachment();}"
                                                class="btn btn-sm btn-outline-primary waves-effect">
                                            @languageContainerService.Keys["Add"]
                                        </button>
                                    </div>
                                </div>
                                <!--begin::Section-->
                                <div class="kt-section">
                                    <div class="table-responsive">
                                        <table class="table rounded table-striped">
                                            <thead class=thead-light>
                                                <tr>
                                                    <th>@languageContainerService.Keys["Description"]</th>
                                                    <th>@languageContainerService.Keys["File"]</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Alerta != null && Alerta.Adjunto != null)
                                                {
                                                    @foreach (var dt in Alerta.Adjunto.LAttachments)
                                                    {
                                                        <tr>
                                                            <td scope="row">@dt.Description</td>
                                                            <td>
                                                                <NavLink href="@dt.Url" target="_blank">@languageContainerService.Keys["ViewAttachemnt"]</NavLink>
                                                            </td>
                                                            <td style="text-align:right">
                                                                <button type="button" class="btn btn-danger" @onclick="(e)=>{RemoveAttachment(dt);}">@languageContainerService.Keys["Delete"]</button>

                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                            </div>

                        </div>

                        <br>
                        <div class="modal-footer">

                            <button type="submit"
                                class="btn btn-info waves-effect">
                                @languageContainerService.Keys["Save"]
                            </button>

                            <button type="button" class="btn btn-danger waves-effect"
                                @onclick="(e)=>{Cancel();}">
                                @languageContainerService.Keys["Cancel"]
                            </button>
                        </div>


                    </EditForm>

                </div>


            </div>
        </div>
    </div>

    @if (openAttachment)
    {
        <Aig.FarmacoVigilancia.Components.Attachments.AddEditAttachment attachment="@attachment"></Aig.FarmacoVigilancia.Components.Attachments.AddEditAttachment>
    }
    
    @if (showSearchMedicine)
{
    <Aig.FarmacoVigilancia.Components.SearchMedicines.Search></Aig.FarmacoVigilancia.Components.SearchMedicines.Search>
    }
    @if (showSearchFarmaco) {
        <Aig.FarmacoVigilancia.Components.FarmacoComun.Search></Aig.FarmacoVigilancia.Components.FarmacoComun.Search>
    }
}

<div class="modal-backdrop fade show"></div>