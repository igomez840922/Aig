@using DataModel.Helper;

@if (Data != null)
{
    <div class="modal fade show" id="exampleModal" tabindex="-1" style="display: block;overflow-y: auto;" aria-modal="true" data-backdrop="static" role="dialog" aria-labelledby="staticBackdrop">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="formModal">@(Data != null && Data.Id > 0 ? @languageContainerService.Keys["Edit"] : @languageContainerService.Keys["New"]) @languageContainerService.Keys["Ram"]</h5>
                    <button type="button" class="close" @onclick="(e)=>{Cancel();}"
                            aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <EditForm Model="@Data" OnValidSubmit="SaveData">
                        <DataAnnotationsValidator />
                        <ul class="nav nav-tabs  nav-tabs-line nav-tabs-line-2x nav-tabs-line-primary nav-tabs-bold" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" data-toggle="tab" href="#generalInfo" role="tab">@languageContainerService.Keys["GeneralInfo"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="#products" role="tab">@languageContainerService.Keys["Notificaciones"]</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="generalInfo" role="tabpanel">
                                <h4>@languageContainerService.Keys["GeneralInfo"]</h4>
                                <div class="row clearfix">

                                    <div class="col-sm-3">
                                        <label>@languageContainerService.Keys["Fecha de Recibido"]</label>
                                        <div class="form-group">
                                            <div class="form-line">
                                                <InputDate class="form-control" @bind-Value="Data.FechaRecibidoCNFV" />
                                                <ValidationMessage For=@(() => Data.FechaRecibidoCNFV) />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-sm-3">
                                        <label>@languageContainerService.Keys["Fecha de entrega"]</label>
                                        <div class="form-group">
                                            <div class="form-line">
                                                <InputDate class="form-control" @bind-Value="Data.FechaEntregaEva" />
                                                <ValidationMessage For=@(() => Data.FechaEntregaEva) />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-sm-4">
                                        <label for="password">@languageContainerService.Keys["Evaluator"]</label>
                                        <div class="form-group">
                                            <div class="form-line">
                                                <RadzenDropDown AllowClear="true" TValue="long?" Class="form-control" @bind-Value=@Data.EvaluadorId
                                                                AllowFiltering="true" FilterCaseSensitivity="@Radzen.FilterCaseSensitivity.CaseInsensitive" FilterOperator="@Radzen.StringFilterOperator.Contains"
                                                                Data=@lEvaluators TextProperty="NombreCompleto" ValueProperty="Id"
                                                                Change=@(args => {OnEvaluatorChange((args!=null?(long)args:null));}) />

                                                <ValidationMessage For=@(() => Data.EvaluadorId) />
                                            </div>
                                        </div>
                                    </div>

                                    @*<div class="col-sm-3">
                                        <label>@languageContainerService.Keys["Evaluador"]</label>
                                        <div class="form-group">
                                            <div class="form-line">
                                                <InputSelect class="form-control" @bind-Value="Data.EvaluadorId">
                                                    <option value=""></option>
                                                    @if (lEvaluators?.Count != null)
                                                    {
                                                        foreach (var dt in lEvaluators)
                                                        {
                                                            <option value="@dt.Id">@dt.NombreCompleto</option>
                                                        }
                                                    }
                                                </InputSelect>
                                                <ValidationMessage For=@(() => Data.EvaluadorId) />
                                            </div>
                                        </div>
                                    </div>*@

                                    <div class="col-sm-3">
                                        <label>@languageContainerService.Keys["Fármaco Sospechoso (Comercial)"]</label>
                                        <div class="form-group">
                                            <div class="form-line">
                                                <InputText class="form-control" @bind-Value="Data.FarmacoSospechosoComercial" />
                                                <ValidationMessage For=@(() => Data.FarmacoSospechosoComercial) />
                                            </div>
                                        </div>
                                    </div>


                                </div>

                                <div class="row clearfix">

                                    
                                    <div class="col-sm-3">
                                        <label>@languageContainerService.Keys["Fármaco Sospechoso (DCI)"]</label>
                                        <div class="form-group">
                                            <div class="form-line">
                                                <InputText class="form-control" @bind-Value="Data.FarmacoSospechosoDci" />
                                                <ValidationMessage For=@(() => Data.FarmacoSospechosoDci) />
                                            </div>
                                        </div>
                                    </div>


                                    <div class="col-sm-3">
                                        <label>@languageContainerService.Keys["ATC"]</label>
                                        <div class="form-group">
                                            <div class="form-line">
                                                <InputText class="form-control" @bind-Value="Data.Atc" />
                                                <ValidationMessage For=@(() => Data.Atc) />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-sm-3">
                                        <label>@languageContainerService.Keys["Sub-grupo Terapéutico"]</label>
                                        <div class="form-group">
                                            <div class="form-line">
                                                <InputText class="form-control" @bind-Value="Data.SubGrupoTerapeutico" />
                                                <ValidationMessage For=@(() => Data.SubGrupoTerapeutico) />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-sm-3">
                                        <label>@languageContainerService.Keys["¿Hay RAM?"]</label>

                                        <div class="form-group">
                                            <InputSelect @bind-Value="Data.RamType" class="form-control">
                                                @foreach (enumFMV_RAMType dt in Enum.GetValues(typeof(enumFMV_RAMType)))
                                                {
                                                <option value="@dt">@(DataModel.Helper.Helper.GetDescription(dt))</option>
                                                }
                                        </InputSelect>
                                        <ValidationMessage For=@(() => Data.RamType) />
                                    </div>
                                </div>

                              

                            </div>

                            <div class="row clearfix">

                                  <div class="col-sm-3">
                                    <label>@languageContainerService.Keys["Origen de Notificación"]</label>

                                    <div class="form-group">
                                        <InputSelect @bind-Value="Data.RamOrigenType" class="form-control">
                                            @foreach (enumFMV_RAMOrigenType dt in Enum.GetValues(typeof(enumFMV_RAMOrigenType)))
                                                {
                                                <option value="@dt">@(DataModel.Helper.Helper.GetDescription(dt))</option>
                                                }
                                        </InputSelect>
                                        <ValidationMessage For=@(() => Data.RamOrigenType) />
                                    </div>
                                </div>

                                <div class="col-sm-3">
                                    <label>@languageContainerService.Keys["Código Noti-Facedra"]</label>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <InputText class="form-control" @bind-Value="Data.CodigoNotiFacedra" />
                                                <ValidationMessage For=@(() => Data.CodigoNotiFacedra) />
                                        </div>
                                    </div>
                                </div>

                                <div class="col-sm-3">
                                    <label>@languageContainerService.Keys["ID Facedra"]</label>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <InputText class="form-control" @bind-Value="Data.IdFacedra" />
                                            <ValidationMessage For=@(() => Data.IdFacedra) />
                                        </div>
                                    </div>
                                </div>

                                <div class="col-sm-3">
                                    <label>@languageContainerService.Keys["Código del CNFV"]</label>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <InputText class="form-control" @bind-Value="Data.CodigoCNFV" />
                                                <ValidationMessage For=@(() => Data.CodigoCNFV) />
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>
                            <div class="tab-pane" id="products" role="tabpanel">
                                <h4>@languageContainerService.Keys["Notificaciones"]</h4>
                                <div class="row clearfix">
                                    <div class="col-9" style="text-align:left;">
                                    </div>
                                    <div class="col-3" style="text-align:right;">
                                        <button style="margin-bottom: 10px;" type="button" @onclick="(e)=>{OpenProduct();}"
                                                class="btn btn-sm btn-outline-primary waves-effect">
                                            @languageContainerService.Keys["Add"]
                                        </button>
                                    </div>
                                </div>
                                <!--begin::Section-->
                                <div class="kt-section">
                                    <div class="table-responsive">
                                        <table class="table rounded table-striped">
                                            <thead class=thead-light>
                                                <tr>
                                                    <th>@languageContainerService.Keys["Código Externo"]</th>
                                                    <th>@languageContainerService.Keys["Tipo de Notificador"]</th>
                                                    <th>@languageContainerService.Keys["Organización"]</th>
                                                    <th>@languageContainerService.Keys["Origen"]</th>
                                                    <th>@languageContainerService.Keys["Fecha de Evaluación"]</th>
                                                    <th>@languageContainerService.Keys["Estado"]</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>



                                                @if (Data != null && Data.LNotificaciones != null)
                                                {
                                                    @foreach (var dt in Data.LNotificaciones)
                                                    {
                                                        <tr>
                                                            <td scope="row">@dt.CodExterno</td>
                                                            <td>@dt.TipoNotificador</td>
                                                            <td>@(dt.NombreOrgInst)</td>
                                                            <td>@(dt.ProvRegionOrigen)</td>
                                                            <td>@(dt.FechaEvaluacion?.ToString("dd/MM/yyyy"))</td>
                                                            <td>@(dt.Estatus)</td>
                                                            <td style="text-align:right">
                                                               <button type="button" class="btn btn-secondary" @onclick="(e)=>{OpenProduct(dt);}">@languageContainerService.Keys["Edit"]</button>
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <br>
                        <div class="modal-footer">

                            <button type="submit"
                                    class="btn btn-info waves-effect">
                                @languageContainerService.Keys["Save"]
                            </button>

                            <button type="button" class="btn btn-danger waves-effect"
                            @onclick="(e)=>{Cancel();}">
                                @languageContainerService.Keys["Cancel"]
                            </button>
                        </div>


                    </EditForm>

                </div>


            </div>
        </div>
    </div>

}


@if (OpenAddEditNotification)
{
    <AddEditNotification Notification="@Notificacion"></AddEditNotification>
}

<div class="modal-backdrop fade show"></div>
