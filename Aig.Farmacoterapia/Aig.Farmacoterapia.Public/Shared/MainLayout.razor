@code {
   
    protected HomeFilter filter { get; set; } = new HomeFilter();
    protected async override Task OnInitializedAsync()
    {   
       
        Bus.Subscribe<SearchTermEvent>(SearchChangeEventHandler);
        base.OnInitialized();
    }
     private void SearchChangeEventHandler(MessageArgs args)
    {
        var message = args.GetMessage<SearchTermEvent>();
        if (message is SearchTermEvent)
        {
           filter = new HomeFilter(){Term=message.Term};
           if(message.Refresh)
             Bus.Publish(new SearchChangeEvent { Filter = filter });
           this.InvokeAsync(StateHasChanged);
        }
    }

    private void OnSearch()
    {
        var path= _navigation.ToBaseRelativePath(_navigation.Uri);
        if (path.Contains("details")){
            var homeUrl = "./";
            if (!string.IsNullOrEmpty(filter.Term))
                homeUrl = $"./?term={filter.Term}";
                _navigation.NavigateTo(homeUrl,true);
        }
       else
         Bus.Publish(new SearchChangeEvent { Filter = filter });
    }

    private void OnSearchChanged()
    {  
       if (string.IsNullOrEmpty(filter.Term)) {
            Bus.Publish(new SearchChangeEvent { Filter = filter });
       }
    }

    private void OnClean() {
        filter = new HomeFilter();
        Bus.Publish(new SearchChangeEvent { Filter = filter });
    }
}