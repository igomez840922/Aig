            <MudIcon Icon="@Icons.Material.Filled.Cancel" Color="Color.Error" Class="mx-4" Style="width:54px; height:54px;"></MudIcon>
            <div>
                <MudText Typo="Typo.subtitle1" Class="mud-text-secondary mb-n1">Cancelled</MudText>
                    <MudText Typo="Typo.h5">@(model.TotalCancelled)</MudText>
