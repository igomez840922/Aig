@page "/dashboard"
@attribute [Authorize]
@layout MainLayout
@implements IDisposable

<MudText Typo="Typo.h5" Color="Color.Primary" Class="mb-4">Dashboard</MudText>
@if (model!=null)
{
    <MudGrid>
        <MudItem xs="12" md="6">
        <MudPaper Elevation="25" Class="d-flex flex-row pt-6 pb-4" Style="height:100px;">
            <MudIcon Icon="@Icons.Material.Filled.AllOut" Color="Color.Primary" Class="mx-4" Style="width:54px; height:54px;"></MudIcon>
            <div>
                <MudText Typo="Typo.subtitle1" Class="mud-text-secondary mb-n1">Total</MudText>
                <MudText Typo="Typo.h5">@(model.Total)</MudText>
            </div>
        </MudPaper>
    </MudItem>
        <MudItem xs="12" md="6">
        <MudPaper Elevation="25" Class="d-flex flex-row pt-6 pb-4" Style="height:100px;">
            <MudIcon Icon="@Icons.Material.Filled.Pending" Color="Color.Secondary" Class="mx-4" Style="width:54px; height:54px;"></MudIcon>
            <div>
                <MudText Typo="Typo.subtitle1" Class="mud-text-secondary mb-n1">Pendientes</MudText>
                    <MudText Typo="Typo.h5">@(model.TotalPending)</MudText>
            </div>
        </MudPaper>
    </MudItem>
    @* <MudItem xs="12" sm="6" md="3">
