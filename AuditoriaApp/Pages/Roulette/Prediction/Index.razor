@page "/rouletteprediction"
@attribute [Authorize]
@layout MainLayout

<MudGrid Spacing="1">
    <MudItem xs="6" sm="3" lg="2">
        <AuditoriaApp.Components.RouletteBoard.EuropeanBoard OnSelectNumberEvent="OnSelectNumberEvent"></AuditoriaApp.Components.RouletteBoard.EuropeanBoard>
    </MudItem>
    <MudItem xs="6" sm="3" lg="2">
        <AuditoriaApp.Components.RouletteBoard.SelectedBoard Data="lSelectedBtns"></AuditoriaApp.Components.RouletteBoard.SelectedBoard>
    </MudItem>
</MudGrid>

<MudGrid Spacing="1">
    <MudItem xs="6">
        <MudButton FullWidth="true" Margin="Margin.Dense" ButtonType="ButtonType.Button" Variant="Variant.Filled" Color="Color.Error" OnClick="UndoLastEntry">Undo Last</MudButton>
    </MudItem>
    <MudItem xs="6">
        <MudButton FullWidth="true" Margin="Margin.Dense" ButtonType="ButtonType.Button" Variant="Variant.Filled" Color="Color.Primary" OnClick="GetPredictions">Settings</MudButton>
    </MudItem>
   <MudItem xs="12">
        <MudButton FullWidth="true" Margin="Margin.Dense" ButtonType="ButtonType.Button" Variant="Variant.Filled" Color="Color.Primary" OnClick="GetPredictions">Get Prediction</MudButton>
    </MudItem>
</MudGrid>

